  <thead>
     <thead class="thead-inverse">
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Configuration</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for key, reducer in @workflow.reducers_config %>
      <tr>
        <td><%= key %></td>
        <td><%= reducer["type"] %></td>
        <td><%= debug reducer %></td>
        <td><!--<button type="button" name="button">Edit</button> <button type="button" name="button">Delete</button> --></td>
      </tr>
    <% end %>
  </tbody>
</table>

